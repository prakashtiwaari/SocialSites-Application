<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.app1.dell.socialsites.SecondActivity"
    android:weightSum="1"
    android:orientation="vertical">


    <Button

        android:layout_height="wrap_content"
        android:text="About The App"
        android:id="@+id/aboutappbtn"

        android:layout_alignParentTop="true"
        android:background="#ff1a66"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ChangeFragment"
        android:layout_width="match_parent"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="About Developer"
        android:id="@+id/aboutdeveloperbtn"
        android:background="#ff1a66"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ChangeFragment"
        android:layout_gravity="right"
        />
   <fragment
       android:layout_width="match_parent"
       android:layout_height="360dp"
       android:name="com.app1.dell.socialsites.FragmentOne"
       android:id="@+id/fragment_palce"
       tools:layout="@layout/fragment_layout_one" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel"
        android:layout_height="74dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="74dp"
            android:text="login"
            android:layout_marginRight="2dp"
            android:background="#ff1a66"
            android:id="@+id/logbtn"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="74dp"
            android:background="#ff1a66"
            android:layout_marginLeft="2dp"
            android:text="SignUp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/logbtn"
            android:layout_toEndOf="@+id/logbtn"
            android:id="@+id/signbtn" />

    </RelativeLayout>
</LinearLayout>



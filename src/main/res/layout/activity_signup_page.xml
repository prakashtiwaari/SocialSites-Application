<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/signupback"
    tools:context="com.app1.dell.socialsites.SignupPage">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:id="@+id/userid"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Username" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:id="@+id/passid"
        android:layout_below="@+id/userid"
        android:layout_centerHorizontal="true"
        android:hint="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginLeft="4dp"
        android:id="@+id/regbtn"
        android:background="#3F8FF7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/mainbtn"
        android:layout_toEndOf="@+id/mainbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainbtn"
        android:layout_alignParentBottom="true"
        android:background="#3F8FF7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Home" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:hint="Email-id"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emli"
        android:layout_below="@+id/passid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
